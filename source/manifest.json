{
	"name": "Faster Panopto",
	"version": "0.0.3",

	"description": "Forked version of Fast panopto designed to work on both firefox and chrome",
	"homepage_url": "https://github.com/chazzox/faster-panopto/",
	"background": { "scripts": ["background"] },
	"permissions": ["activeTab", "tabs", "storage", "webRequest", "<all_urls>"],

	"browser_action": {
		"default_popup": "popup.html",
		"browser_style": true,
		"default_icon": {
			"32": "images/enabled.png"
		}
	},
	"icons": {
		"32": "images/enabled.png"
	},

	"web_accessible_resources": ["images/arrow.png", "images/disabled.png"],

	"manifest_version": 2
}
