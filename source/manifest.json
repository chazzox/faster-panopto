{
	"$schema": "https://json.schemastore.org/webextension.json",
	"name": "Faster Panopto",
	"version": "0.0.2",
	"description": "Forked version of Fast panopto designed to work on both firefox and chrome",
	"homepage_url": "https://github.com/chazzox/faster-panopto/",
	"background": { "scripts": ["utils/background"] },
	"permissions": ["activeTab", "tabs", "storage"],
	"browser_action": {
		"default_popup": "popup.html",
		"browser_style": true,
		"default_icon": {
			"64": "images/enabled.png"
		}
	},
	"icons": {
		"64": "images/enabled.png"
	},
	"web_accessible_resources": ["images/arrow.png", "images/disabled"],
	"manifest_version": 2
}
